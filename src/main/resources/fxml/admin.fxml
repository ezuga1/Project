<?xml version="1.0" encoding="UTF-8"?>
<!-- Root container -->
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ba.unsa.etf.rpr.AdminController"
      alignment="center" spacing="10">

    <!-- Title label -->
    <Label text="Employee Dashboard" font="-fx-font-size: 24px;"/>
    <!-- GridPane container for add, delete and update items -->
    <GridPane fx:id="gridPane" alignment="center" hgap="10" vgap="10">
        <!-- Column 1 -->
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>

        <!-- Row 1 -->
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <!-- Add Item label -->
        <Label text="Add Item" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <!-- Delete Item label -->
        <Label text="Delete Item" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <!-- Update Item label -->
        <Label text="Update Item" GridPane.rowIndex="2" GridPane.columnIndex="0"/>

        <!-- Add Item button -->
        <Button text="Add Item" onAction="#addItem" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Delete Item button -->
        <Button text="Delete Item" onAction="#deleteItem" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Update Item button -->
        <Button text="Update Item" onAction="#updateItem" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    </GridPane>
</VBox>