<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="467.0" prefWidth="390.0" vgap="10" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.RegisterController">
  <padding>
    <Insets bottom="40" left="40" right="40" top="40" />
  </padding>
  <columnConstraints>
    <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100" />
    <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200" />
  </columnConstraints>
  <!-- Add Header Label -->
  <Label text="Register to Market" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
    <font>
      <Font name="Arial" size="24" />
    </font>
    <GridPane.margin>
      <Insets bottom="20" left="0" right="0" top="20" />
    </GridPane.margin>
  </Label>
  <!-- Add Name Label -->
  <Label text="Username : " GridPane.columnIndex="0" GridPane.rowIndex="1" />
  <!-- Add Name Text Field -->
  <TextField fx:id="userNameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
  <!-- Add Email Label -->
  <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="2" />
  <!-- Add Email Text Field -->
  <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
  <!-- Add Password Label -->
  <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="3" />
  <!-- Add Password Field -->
  <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
  <!-- Add Submit Button -->
  <Button fx:id="registerButton" defaultButton="true" onAction="#register" prefHeight="40" prefWidth="100" text="Register" underline="true" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.rowSpan="1">
    <GridPane.margin>
      <Insets bottom="20" left="0" right="0" top="20" />
    </GridPane.margin>
      <font>
         <Font size="14.0" />
      </font>
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <effect>
         <InnerShadow />
      </effect>
  </Button>
   <Button minHeight="-Infinity" minWidth="20.0" mnemonicParsing="false" onAction="#adminLogin" prefHeight="28.0" prefWidth="310.0" text="Log in as employee" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
