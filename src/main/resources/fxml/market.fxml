<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.MarketController">
  <top>
    <VBox BorderPane.alignment="CENTER">
      <children>
        <HBox>
          <children>
            <Button mnemonicParsing="false" onAction="#onClickHome" text="Home" BorderPane.alignment="CENTER_LEFT" />
            <Button mnemonicParsing="false" onAction="#randomItem" text="Random item" BorderPane.alignment="CENTER_LEFT" />
            <Button mnemonicParsing="false" onAction="#onClickContact" text="Contact" BorderPane.alignment="CENTER_RIGHT" />
            <Button mnemonicParsing="false" onAction="#onClickLogOut" text="Logout" BorderPane.alignment="CENTER_RIGHT" />
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </HBox>
      </children>
      <BorderPane.margin>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </BorderPane.margin>
    </VBox>
  </top>
    <center>
      <VBox BorderPane.alignment="CENTER">
        <children>
          <HBox>
            <children>
              <Label text="Search by price range: " />
              <TextField fx:id="minPriceField" promptText="Min Price" />
              <Label text=" - " />
              <TextField fx:id="maxPriceField" promptText="Max Price" />
              <Button mnemonicParsing="false" onAction="#onSearchByPrice" text="Search" />
            </children>
          </HBox>
          <HBox prefHeight="62.0" prefWidth="600.0">
            <children>
              <Label text="Search by category: " />
              <ChoiceBox fx:id="categoryChoice" />
              <Button mnemonicParsing="false" onAction="#Buy" prefHeight="25.0" prefWidth="56.0" text="Buy">
                     <HBox.margin>
                        <Insets left="370.0" />
                     </HBox.margin></Button>
            </children>
          </HBox>
          <ScrollPane prefHeight="19.0" prefWidth="600.0" />
          <TableView fx:id="itemsTable" prefHeight="320.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <columns>
              <TableColumn fx:id="colName" prefWidth="100" text="Name" />
              <TableColumn fx:id="colPrice" prefWidth="100" text="Price" />
              <TableColumn fx:id="colDesc" prefWidth="100" text="Description" />
            </columns>
          </TableView>
        </children>
      </VBox>
    </center>
  <bottom>
    <HBox BorderPane.alignment="CENTER">
      <children>
        <Label text="" />
      </children>
    </HBox>
  </bottom>
</BorderPane>
